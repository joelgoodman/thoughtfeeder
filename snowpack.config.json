"scripts": {
  "mount:eleventy": "mount _includes --to _site",
  "run:eleventy": "eleventy",
  "run:eleventy::watch": "$1 --watch",
  "run:css": "postcss _includes/assets/scss/**/[^_]*.scss --dir _site/assets/css --ext css",
  "run:css::watch": "$1 --watch"
},
"devOptions": {
  "port": 8080,
  "open": "none",
  "bundle": false,
  "out": "_site"
},
{
  "plugins": [
    "@snowpack/plugin-postcss"
  ]
}